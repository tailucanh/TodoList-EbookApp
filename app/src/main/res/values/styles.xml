<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_title_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_text_view_login">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/aldrich</item>
        <item name="android:textColor">@color/color_text_view_login</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:shadowColor">@color/color_shadow_text_view_login</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
    </style>
    <style name="style_img_button_sign_in">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:background">@drawable/custom_button_icon_sign_up</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/duskYellow</item>
    </style>
    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/rattingColor</item>
    </style>

    <style name="text_tab_layout" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#121212</item>
    </style>

    <style name="style_text_title_notes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="style_img_tool_bar_notes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_gravity">end</item>
    </style>


    <style name="style_text_dialog_change_color">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="style_img_dialog_change_color">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>
    <style name="style_img_dialog_change_color_2">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_check</item>
    </style>

    <style name="style_card_view_dialog_change_color">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginStart">25dp</item>
    </style>
    <style name="style_card_view_dialog_change_color_2">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="style_text_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">23dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_text_details">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/courgette</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_1</item>
    </style>



</resources>