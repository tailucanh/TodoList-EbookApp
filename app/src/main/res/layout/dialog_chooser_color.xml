<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/dialog_chooser_color"
    android:elevation="10dp"
    android:background="@color/white"
    android:layout_gravity="bottom">
    <TextView
        style="@style/style_text_dialog_change_color"
        android:text="@string/title_dialog_color"
        android:paddingTop="10dp"
     />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp">
            <ImageView
                android:id="@+id/color1"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_1"


                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/check_1"
                style="@style/style_img_dialog_change_color_2"

                app:layout_constraintBottom_toBottomOf="@+id/color1"
                app:layout_constraintEnd_toEndOf="@+id/color1"
                app:layout_constraintStart_toStartOf="@+id/color1"
                app:layout_constraintTop_toTopOf="@+id/color1" />

            <ImageView
                android:id="@+id/color2"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_2"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color1"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/check_2"
                style="@style/style_img_dialog_change_color_2"

                app:layout_constraintBottom_toBottomOf="@+id/color2"
                app:layout_constraintEnd_toEndOf="@+id/color2"
                app:layout_constraintStart_toStartOf="@+id/color2"
                app:layout_constraintTop_toTopOf="@+id/color2" />

            <ImageView
                android:id="@+id/color3"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color2"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/check_3"
                style="@style/style_img_dialog_change_color_2"

                app:layout_constraintBottom_toBottomOf="@+id/color3"
                app:layout_constraintEnd_toEndOf="@+id/color3"
                app:layout_constraintStart_toStartOf="@+id/color3"
                app:layout_constraintTop_toTopOf="@+id/color3" />

            <ImageView
                android:id="@+id/color4"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color3"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/check_4"
                style="@style/style_img_dialog_change_color_2"

                app:layout_constraintBottom_toBottomOf="@+id/color4"
                app:layout_constraintEnd_toEndOf="@+id/color4"
                app:layout_constraintStart_toStartOf="@+id/color4"
                app:layout_constraintTop_toTopOf="@+id/color4" />
            <ImageView
                android:id="@+id/color5"
                style="@style/style_img_dialog_change_color"
                android:src="@drawable/ic_color_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/color4"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/check_5"
                style="@style/style_img_dialog_change_color_2"

                app:layout_constraintBottom_toBottomOf="@+id/color5"
                app:layout_constraintEnd_toEndOf="@+id/color5"
                app:layout_constraintStart_toStartOf="@+id/color5"
                app:layout_constraintTop_toTopOf="@+id/color5" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
    <TextView
        style="@style/style_text_dialog_change_color"
        android:text="@string/title_dialog_color_2"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingVertical="10dp"
            android:layout_height="wrap_content"
            android:paddingEnd="20dp">
            <ImageView
                android:id="@+id/cav_background_hide"
                style="@style/style_card_view_dialog_change_color"
                android:src="@drawable/ic_hide_source"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_1"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_hide"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_1"
                  />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_2"
                style="@style/style_card_view_dialog_change_color"
                app:cardCornerRadius="200dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_1"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_2" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_3"
                style="@style/style_card_view_dialog_change_color"
                app:cardCornerRadius="200dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_2"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_3"
                   />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_4"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_3"
                app:layout_constraintTop_toTopOf="parent"
                >

                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_4" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/cav_background_5"
                style="@style/style_card_view_dialog_change_color"

                app:cardCornerRadius="200dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cav_background_4"
                app:layout_constraintTop_toTopOf="parent"
                >
                <ImageView
                    style="@style/style_card_view_dialog_change_color_2"
                    android:src="@drawable/background_5"
                   />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>
</LinearLayout>


