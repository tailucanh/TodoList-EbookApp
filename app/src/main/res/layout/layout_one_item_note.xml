<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="3dp"
    android:gravity="center"

    >

        <LinearLayout
            android:id="@+id/layout_one_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="8dp"
            android:paddingHorizontal="8dp"
            android:layout_margin="3dp"
            android:background="@drawable/custom_solid_one_items_notes_1"
            >
                <TextView
                    android:id="@+id/tv_title_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textSize="20dp"
                    android:gravity="start"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/mali"/>

                <TextView
                    android:id="@+id/tv_content_note"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:maxLines="10"
                    android:fontFamily="@font/dongle"
                    android:gravity="left"
                    android:text="Thông tin content của bạn"
                    android:lineHeight="20sp"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

        </LinearLayout>

</LinearLayout>