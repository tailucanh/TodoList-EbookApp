<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:padding="10dp"
    android:layout_marginHorizontal="40dp"
    android:background="@drawable/custom_item_content_books_2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_function_3"
        android:gravity="center"
        android:textSize="23dp"
        android:fontFamily="@font/mali"
        android:textColor="@color/black"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/change_color1"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_1"
        />

        <ImageView
            android:id="@+id/change_color2"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_2"
          />
        <ImageView
            android:id="@+id/change_color3"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_3"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/change_color4"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_4"
            />
        <ImageView
            android:id="@+id/change_color5"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_5"
            />
        <ImageView
            android:id="@+id/change_color6"
            style="@style/style_img_dialog_change_color"
            android:src="@drawable/ic_color_6"
            />
    </LinearLayout>


</LinearLayout>