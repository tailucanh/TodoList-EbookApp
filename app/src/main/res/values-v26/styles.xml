<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_text_input_layout_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">30dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@drawable/custom_input_login</item>
        <item name="android:elevation">4dp</item>
        <item name="counterTextColor">@color/black</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="hintEnabled">false</item>
    </style>


    <style name="style_text_input_edit_text_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/custom_input_login</item>
        <item name="android:fontFamily">@font/dongle</item>
        <item name="android:textColor">@color/black</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textSize">33dp</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:textCursorDrawable">@drawable/custom_pointer_color</item>
    </style>

    <style name="style_button_login_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/custom_button_login</item>
        <item name="android:textSize">19dp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:layout_marginHorizontal">30dp</item>
    </style>

    <style name="style_text_input_edit_text_title_notes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/arvo</item>
        <item name="android:hint">@string/title_note</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textCursorDrawable">@drawable/custom_pointer_color</item>
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">15dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:drawableStart">@drawable/ic_title_note</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:background">@drawable/background_color_edit_text_note_1</item>
    </style>

    <style name="style_text_input_edit_text_content_notes">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:fontFamily">@font/alegreya</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:hint">@string/content_note</item>

        <item name="android:textColorHint">@color/black</item>
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textCursorDrawable">@drawable/custom_pointer_color</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@drawable/background_color_edit_text_note_1</item>
    </style>


    <style name="style_button_add_notes">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingHorizontal">70dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:fontFamily">@font/mali</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/custom_button_notes_1</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="style_text_full_screen_activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">256dp</item>
        <item name="android:fontFamily">@font/brandon</item>
        <item name="android:text">To Do</item>
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:textSize">30dp</item>
        <item name="android:shadowColor">@color/gray_5</item>
        <item name="android:shadowDx">4</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">5</item>
    </style>

    <style name="style_text_full_screen_activity_2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">228dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:fontFamily">@font/permane</item>

        <item name="android:textColor">@color/pink_1</item>
        <item name="android:textSize">55dp</item>
        <item name="android:shadowColor">@color/pink_2</item>
        <item name="android:shadowDx">8</item>
        <item name="android:shadowDy">8</item>
        <item name="android:shadowRadius">5</item>
    </style>


    <style name="style_text_full_screen_activity_3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:text">Language</item>
        <item name="android:elevation">2dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@drawable/custom_background_text_language</item>
    </style>

    <style name="style_button_full_screen_activity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">48dp</item>
        <item name="android:paddingHorizontal">65dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:fontFamily">@font/dongle</item>
        <item name="android:text">@string/button_start</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/custom_button_hello_screen</item>
    </style>


</resources>